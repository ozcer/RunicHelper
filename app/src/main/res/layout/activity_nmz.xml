<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ozcer.runichelper.NmzActivity"

    android:padding="6dp"

    android:orientation="vertical"



    >
    <LinearLayout
        android:id="@+id/nmz_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prayer drain: "
            style="@style/fontSizeRead"
            />
        <TextView
            android:id="@+id/drainRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1.234"
            style="@style/fontSizeRead"

            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/nmz_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="50"
                >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="prayer level: "
                    style="@style/fontSizeRead" />

                <EditText
                    android:id="@+id/edt_prayerLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="prayer level"
                    style="@style/fontSizeRead"
                    android:text="1"
                    android:inputType="number"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/fontSizeRead"
                    android:text="prayer bonus: "
                    />
                <EditText
                    android:id="@+id/edt_prayerBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="prayer bonus"
                    android:text="0"
                    style="@style/fontSizeRead"
                    android:inputType="number"

                    />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="max time: "
                    style="@style/fontSizeRead"
                    />

                <EditText
                    android:id="@+id/edt_maxTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/fontSizeRead"
                    android:hint="input minutes"
                    android:text="0"
                    android:inputType="number"


                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"

                android:weightSum="10"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/prayer_potion"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="X"
                    />
                <TextView
                    android:id="@+id/tv_prayerPotionAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:text="123"
                    style="@style/fontSizeRead"
                    android:gravity="center"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/overload"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="X"
                    />

                <TextView
                    android:id="@+id/tv_overloadAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:text="123"
                    style="@style/fontSizeRead"
                    android:gravity="center"

                    />



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="repot every "
                style="@style/fontSizeRead"

                android:layout_weight="25"
                />

