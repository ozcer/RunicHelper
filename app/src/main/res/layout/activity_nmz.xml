                android:id="@+id/tv_prayerPotionRepotTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="50 sec"
                style="@style/fontSizeRead"

                android:layout_weight="25"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="repot every "
                style="@style/fontSizeRead"

                android:layout_weight="25"
                />

            <TextView
                android:id="@+id/tv_overloadRepotTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5min 0s"
                style="@style/fontSizeRead"

                android:layout_weight="25"
                />




        </LinearLayout>



    </LinearLayout>
